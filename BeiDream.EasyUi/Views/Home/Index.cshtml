@*@using Util.Webs.EasyUi;在View的Web.config里注册之后就不用在页面上引用了*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="easyui-layout">
    <div data-options="region:'north',border:false" style="height: 71px" >
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid" style="background-image: url(/Content/images/head_bg.gif);height: 70px ">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        <div style="font-size: 40px; font-family: 微软雅黑; color: white">
                            @Html.Bootstrap().Image("/Content/images/login/logo.jpg", "").AddStyle("height", "40px").AddStyle("width", "80px")
                            权限管理系统
                        </div>
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="https://www.baidu.com/" target="_blank" style="color: rgb(11, 243, 178);font-weight: bold">帮&nbsp;助</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="False" style="color: white;font-weight:bold">当前用户:@ViewBag.UserName <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">个人设置</a></li>
                                <li><a href="#">修改密码</a></li>
                                <li class="divider"></li>
                                <li><a href="#">安全退出</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div data-options="region:'west',title:'功能菜单',split:true,maxWidth:500" style="width:180px;">
        <div class="easyui-accordion" data-options="fit:true,border:false">
            <div title="Title1" data-options="iconCls:'icon-save'" style="overflow:auto;">
                @Html.EasyUi().Tree("/Home/GetTree", "divMenuTree")
            </div>
            <div title="Title2" data-options="iconCls:'icon-reload'" style="padding:10px;">
                <ul class="easyui-tree" id="divMenuTree" data-options="url:'/Home/GetTree'"></ul>
            </div>
            <div title="Title3">

            </div>
        </div>
    </div>
    <div data-options="region:'south',border:false" style="height:50px;background:#A9FACD;padding:10px;">south region</div>
    <div data-options="region:'center',title:'Center'"></div>
</body>


